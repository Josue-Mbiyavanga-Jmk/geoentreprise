<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppActivityPersonnalise" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BcBlack1</item>
        <item name="colorPrimaryDark">@color/BcBlack</item>
        <item name="colorAccent">@color/GrisColor</item>

        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorAccent</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/colorAccent</item>

    </style>

    <style name="AppActivityPersonnalise1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BcBlack1</item>
        <item name="colorPrimaryDark">@color/BcBlack</item>
        <item name="colorAccent">@color/GrisColor</item>

    </style>
    <style name="AppThemePersonnalise" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BcBlack1</item>
        <item name="colorPrimaryDark">@color/BcBlack</item>
        <item name="colorAccent">@color/GrisColor</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorAccent</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/colorAccent</item>

    </style>

    <style name="ScrollThemeAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Bgtranspart</item>
        <item name="colorPrimaryDark">@color/Bgtranspart</item>
        <item name="colorAccent">@color/Bgtranspart</item>

    </style>

    <style name="edit_input_style_app">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textColorHint">@color/BcGridbis</item>
        <item name="android:textSize">15.4sp</item>
    </style>

    <style name="txt_help_menu">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorAccent</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/colorAccent</item>
    </style>

</resources>
