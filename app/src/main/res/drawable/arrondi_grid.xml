<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true"  >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="20dp"
                />
            <solid
                android:color="@color/Bgtranspart"
                />
            <size
                android:width="0dp"
                android:height="10dp"
                />

            <stroke android:color="@color/BcBlack"

                android:width="1dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="20dp"
                />
            <solid

                android:color="@color/transparent"
                />
            <size
                android:width="0dp"
                android:height="10dp"
                />
            <stroke android:color="@color/BcGridbis"

                android:width="0.2dp"/>
        </shape>

    </item>

</selector>


