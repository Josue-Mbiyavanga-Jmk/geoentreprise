<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Activities.ActivityParametres">

    <!--- Premier menu-->
    <LinearLayout
        android:id="@+id/param_categorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/parametre_back_pressed"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_category"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:text="Catégorie Entreprise"
                    android:textColor="#262628"
                    android:textSize="12.5sp" />


                <LinearLayout
                    android:id="@+id/contenaire_type_event"
                    android:layout_below="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">


                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:text="Pour la gestion de catégorie de votre entreprise"
                        android:textColor="#9b9b9b"
                        android:textSize="10.5sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--- fin Premier menu-->

    <!--- Second menu-->
    <LinearLayout
        android:id="@+id/param_locate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/parametre_back_pressed"
        android:visibility="gone"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
           >

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/FoodImage_Id"
                app:srcCompat="@drawable/ic_perm_user"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txt_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:text="Utilisateurs"
                    android:textColor="#262628"
                    android:textSize="12.5sp" />


                <LinearLayout
                    android:id="@+id/contenaire_type_event1"
                    android:layout_below="@+id/txt_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">


                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_description1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:text="Pour la gestion des utilisateurs de votre entreprise"
                        android:textColor="#9b9b9b"
                        android:textSize="10.5sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--- fin Second menu-->

    <!--- Troisième menu-->
    <LinearLayout
        android:id="@+id/param_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/parametre_back_pressed"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_perm_user"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txt_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:text="Utilisateurs"
                    android:textColor="#262628"
                    android:textSize="12.5sp" />


                <LinearLayout
                    android:id="@+id/contenaire_type_event2"
                    android:layout_below="@+id/txt_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">


                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_description2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:text="Pour la gestion des utilisateurs de votre entreprise"
                        android:textColor="#9b9b9b"
                        android:textSize="10.5sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--- fin Troisième menu-->




</LinearLayout>