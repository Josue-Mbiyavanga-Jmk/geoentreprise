<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="7.6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14.4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/FoodImage_Id"
                        app:srcCompat="@drawable/ic_produit_box"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="12dp">

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="90dp"
                            android:hint="Nom station"
                            android:textColor="#262628"
                            android:textSize="14.4sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txt_date"
                            android:layout_toLeftOf="@+id/img_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:hint="Date creation"
                            android:textColor="#9b9b9b"
                            android:textSize="11.5sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/img_status"
                            />


                        <LinearLayout
                            android:id="@+id/contenaire_type_event"
                            android:layout_below="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp">


                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="5dp"
                                android:hint="Description"
                                android:textColor="#9b9b9b"
                                android:textSize="11.5sp" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>

